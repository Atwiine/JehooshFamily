<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <TextView
                android:id="@+id/heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/poppins"
                android:padding="4dp"
                android:text="Total votes results"
                android:textAlignment="center"
                android:textColor="@color/whiteText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/heading2"
                android:background="@color/colorPrimaryDark" />

            <LinearLayout
                android:id="@+id/ltcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading2"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Total Count :"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/VtotalCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Total Count"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_margin="5dp"
                android:layout_below="@+id/ltcount"
                android:background="@color/colorPrimaryDark"
                />
            <RelativeLayout
                android:id="@+id/lccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ltcount"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vvo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Option 1 :"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/vopt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Total Count"
                        android:textAlignment="center"
                        android:textColor="@color/gradientLightGreen"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress_op1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="4dp"
                    app:arc_finished_color="@color/primaryText"
                    app:arc_stroke_width="3dp"

                    app:arc_suffix_text_size="12sp"
                    app:arc_text_size="12sp"
                    app:arc_text_color="@color/primaryText"
                    app:arc_unfinished_color="#B6B2B2" />
            </RelativeLayout>

            <View
                android:id="@+id/vv2"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/lccount"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryDark" />
            <RelativeLayout
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vv2"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vvo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Option 2 :"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/vopt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Total Count"
                        android:textAlignment="center"
                        android:textColor="@color/gradientLightGreen"
                        android:textSize="14sp" />
                </LinearLayout>

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress_op2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"

                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:arc_stroke_width="3dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="4dp"
                    app:arc_finished_color="@color/primaryText"

                    app:arc_suffix_text_size="12sp"
                    app:arc_text_size="12sp"
                    app:arc_text_color="@color/primaryText"
                    app:arc_unfinished_color="#B6B2B2" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/v2"
                android:layout_margin="5dp"
                android:id="@+id/vv3"
                android:background="@color/colorPrimaryDark"
                />
            <RelativeLayout
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v2"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vvo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Option 3 :"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/vopt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Total Count"
                        android:textAlignment="center"
                        android:textColor="@color/gradientLightGreen"
                        android:textSize="14sp" />
                </LinearLayout>

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress_op3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="4dp"
                    app:arc_stroke_width="3dp"

                    app:arc_finished_color="@color/primaryText"

                    app:arc_suffix_text_size="12sp"
                    app:arc_text_size="12sp"
                    app:arc_text_color="@color/primaryText"
                    app:arc_unfinished_color="#B6B2B2" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/v3"
                android:id="@+id/vv5"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryDark"
                />
            <RelativeLayout
                android:id="@+id/v4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v3"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vvo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Option 4 :"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/vopt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Total Count"
                        android:textAlignment="center"
                        android:textColor="@color/gradientLightGreen"
                        android:textSize="14sp" />
                </LinearLayout>

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress_op4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:arc_stroke_width="3dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="4dp"
                    app:arc_finished_color="@color/primaryText"

                    app:arc_suffix_text_size="12sp"
                    app:arc_text_size="12sp"
                    app:arc_text_color="@color/primaryText"
                    app:arc_unfinished_color="#B6B2B2" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/v4"
                android:id="@+id/vv4"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryDark"
                />

            <RelativeLayout
                android:id="@+id/v5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vvo5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Option 5 :"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/vopt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Total Count"
                        android:textAlignment="center"
                        android:textColor="@color/gradientLightGreen"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress_op5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"

                    android:layout_marginBottom="10dp"
                    android:elevation="4dp"

                    app:arc_finished_color="@color/primaryText"
                    app:arc_stroke_width="3dp"

                    app:arc_suffix_text_size="12sp"
                    app:arc_text_size="12sp"
                    app:arc_text_color="@color/primaryText"
                    app:arc_unfinished_color="#B6B2B2" />
            </RelativeLayout>

            <!--        <com.natasa.progressviews.ArcProgressBar-->
            <!--            android:id="@+id/arc_progressbar"-->
            <!--            android:layout_width="100dp"-->
            <!--            android:layout_height="100dp"-->
            <!--            android:layout_alignEnd="@+id/line_progressbar"-->
            <!--            android:layout_alignRight="@+id/line_progressbar"-->
            <!--            android:layout_alignTop="@+id/line_progressbar1"-->
            <!--            android:visibility="visible"-->
            <!--            app:bar_color="#e6df1b"-->
            <!--            app:bar_width="15dp"-->
            <!--            app:progress_color="#9ad426"-->
            <!--            app:progress_width="20dp" />-->


            <Button
                android:id="@+id/ok"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v5"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gradient_users"
                android:fitsSystemWindows="true"
                android:focusable="true"
                android:fontFamily="@font/poppins"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@color/whiteText"
                android:textSize="14sp" />


        </RelativeLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>