<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteCardColor">


    <ImageView
        android:id="@+id/market_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="30sp"
        android:layout_marginTop="0dp"
        android:contentDescription="jehoosh family icon"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:src="@drawable/ic_jehoosh_family_logo" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:background="@drawable/welcome1down" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Slide"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_below="@id/market_img"
            android:background="@drawable/welcome1" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="350dp"
            android:layout_below="@id/market_img"
            android:layout_gravity="bottom"
            android:background="@drawable/welcome1" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="250dp"
            android:layout_below="@id/market_img"
            android:layout_gravity="bottom"
            android:background="@drawable/welcome1" />
    </LinearLayout>

</RelativeLayout>