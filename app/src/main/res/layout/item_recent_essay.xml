<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_recentessy_qn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhite"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon_recents"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_essay_icon" />

            <LinearLayout
                android:id="@+id/contents_inputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/recent_essay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="40dp"
                    android:fitsSystemWindows="true"
                    android:focusable="true"
                    android:fontFamily="@font/poppins"
                    android:text="Recent Essay one"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/recent_response_essay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="40dp"
                    android:fitsSystemWindows="true"
                    android:focusable="true"
                    android:text="responses"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/recent_answer_from_who"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
android:layout_marginTop="5dp"
                    android:background="@color/colorPrimaryDark"
                    android:fitsSystemWindows="true"
                    android:focusable="true"
                    android:text="From who"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/date_essay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fitsSystemWindows="true"
                    android:focusable="true"
                    android:fontFamily="@font/poppins"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="13sp" />




                <TextView
                    android:id="@+id/recent_reply_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="40dp"
                    android:background="@color/colorPrimaryDark"
                    android:fitsSystemWindows="true"
                    android:focusable="true"
                    android:text="id"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:id="@+id/edit"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/blue_active"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp"
                        >
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fitsSystemWindows="true"
                        android:focusable="true"
                        android:text="Edit"
                            android:layout_gravity="center"
                        android:textColor="@color/whiteBodyColor"
                        android:textSize="14sp"
                        android:visibility="visible" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:id="@+id/closeedit"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/orange_active"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fitsSystemWindows="true"
                            android:focusable="true"
                            android:text="Cancel editing"
                            android:layout_gravity="center"
                            android:textColor="@color/whiteBodyColor"
                            android:textSize="15sp"
                            android:visibility="visible" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:id="@+id/delete"
                        app:cardBackgroundColor="@color/profilePrimaryDark"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fitsSystemWindows="true"
                            android:focusable="true"
                            android:text="Delete"
                            android:layout_gravity="center"
                            android:textColor="@color/whiteBodyColor"
                            android:textSize="14sp"
                            android:visibility="visible" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:id="@+id/linear_edit"
                    android:orientation="vertical">

                    <AutoCompleteTextView
                        android:id="@+id/essay_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/border_sendfeedback"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins"
                        android:freezesText="true"
                        android:layout_marginBottom="10dp"
                        android:hint="Enter your essay"
                        android:imeOptions="actionNext"
                        android:lines="3"
                        android:maxLength="10000"
                        android:nextFocusDown="@null"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:id="@+id/send_edit"
                        app:cardBackgroundColor="@color/blue_active"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fitsSystemWindows="true"
                            android:focusable="true"
                            android:text="Update"
                            android:layout_gravity="center"
                            android:textColor="@color/whiteBodyColor"
                            android:textSize="15sp"
                            android:visibility="visible" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>